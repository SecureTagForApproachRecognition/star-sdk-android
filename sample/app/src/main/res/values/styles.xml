<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowTranslucentStatus">true</item>
		<item name="android:windowTranslucentNavigation">true</item>
	</style>

	<style name="Sample.Text" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/text_size_normal</item>
		<item name="android:textColor">@color/textPrimary</item>
	</style>

	<style name="Sample.Button" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/bg_button_default</item>
		<item name="android:foreground">@drawable/ripple_button</item>
		<item name="android:textAppearance">@style/Sample.Text</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:paddingStart">@dimen/spacing_medium</item>
		<item name="android:paddingEnd">@dimen/spacing_medium</item>
	</style>

	<style name="Sample.Button.Requirements">
		<item name="android:drawableStart">@drawable/selector_requirements_button_icon</item>
		<item name="android:drawablePadding">@dimen/spacing_medium</item>
		<item name="android:background">@drawable/bg_button_requirements</item>
		<item name="android:textColor">@drawable/selector_requirements_text_color</item>
	</style>

	<style name="Sample.Button.Tracking">
		<item name="android:background">@drawable/bg_button_tracking</item>
		<item name="android:textColor">@drawable/selector_tracking_text_color</item>
	</style>

</resources>
